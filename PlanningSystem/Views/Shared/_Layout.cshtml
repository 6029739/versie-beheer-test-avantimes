        function makeBlockDraggable(block) {
            let isDragging = false;
            let startX, startY, initialX, initialY;
            
            block.addEventListener('mousedown', function(e) {
                if (e.target.classList.contains('delete-btn')) return;
                
                isDragging = true;
                startX = e.clientX - block.offsetLeft;
                startY = e.clientY - block.offsetTop;
                initialX = block.offsetLeft;
                initialY = block.offsetTop;
                
                block.style.zIndex = '1000';
                block.style.cursor = 'grabbing';
            });
            
            document.addEventListener('mousemove', function(e) {
                if (!isDragging) return;
                
                e.preventDefault();
                
                const newX = e.clientX - startX;
                const newY = e.clientY - startY;
                
                if (isWeekView) {
                    // In week view, snap to day columns
                    const dayWidth = 200;
                    const dayIndex = Math.round(newX / dayWidth);
                    const boundedX = Math.max(0, Math.min(dayIndex * dayWidth, 6 * dayWidth));
                    
                    // Snap to 30-minute intervals vertically
                    const snappedY = Math.round(newY / 30) * 30;
                    const boundedY = Math.max(0, Math.min(snappedY, 450 - block.offsetHeight));
                    
                    block.style.left = `${boundedX}px`;
                    block.style.top = `${boundedY}px`;
                } else {
                    // In day view, snap to 30-minute intervals horizontally
                    const snappedX = Math.round(newX / 30) * 30;
                    const boundedX = Math.max(0, Math.min(snappedX, 24 * 60 - block.offsetWidth));
                    
                    block.style.left = `${boundedX}px`;
                }
            });
            
            document.addEventListener('mouseup', function() {
                if (!isDragging) return;
                
                isDragging = false;
                block.style.zIndex = '';
                block.style.cursor = '';
                
                // Update times based on new position
                if (isWeekView) {
                    const dayIndex = Math.round(parseFloat(block.style.left) / 200);
                    const startMinutes = parseFloat(block.style.top);
                    const durationMinutes = parseFloat(block.style.height);
                    
                    block.dataset.startTime = minutesToTime(startMinutes);
                    block.dataset.endTime = minutesToTime(startMinutes + durationMinutes);
                    block.dataset.dayIndex = dayIndex;
                } else {
                    const startMinutes = parseFloat(block.style.left);
                    const durationMinutes = parseFloat(block.style.width);
                    
                    block.dataset.startTime = minutesToTime(startMinutes);
                    block.dataset.endTime = minutesToTime(startMinutes + durationMinutes);
                }
                
                // Update time display
                const timeDisplay = block.querySelector('.time-range');
                if (timeDisplay) {
                    timeDisplay.textContent = `${block.dataset.startTime} - ${block.dataset.endTime}`;
                }
                
                // Save changes
                saveTimeBlock(block);
            });
        }

        function saveTimeBlock(block) {
            const savedBlocks = JSON.parse(localStorage.getItem('globalTimeBlocks') || '{}');
            const employeeId = block.dataset.employee;
            
            if (!savedBlocks[employeeId]) {
